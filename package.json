{
  "name": "@plexus/ui-aerospace",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for primitive-based aerospace component library with planetary visualization components for React Three Fiber",
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "scripts": {
    "dev": "npm run dev -w @plexusui/playground",
    "dev:playground": "npm run dev -w @plexusui/playground",
    "build": "npm run build -w @plexusui/cli",
    "build:cli": "npm run build -w @plexusui/cli",
    "build:playground": "npm run build -w @plexusui/playground",
    "publish": "npm run build:cli && npm publish -w @plexusui/cli --access public",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "keywords": [
    "monorepo",
    "aerospace",
    "ui",
    "components",
    "react",
    "three.js",
    "r3f",
    "react-three-fiber",
    "primitives",
    "planets",
    "visualization",
    "shadcn"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/plexus-space/ui.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "typescript": "^5.4.5"
  }
}