{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    "noEmit": true,
    "allowJs": true,

    "strict": true,

    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@plexusui/components/*": ["../packages/components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/**/*.js"
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../packages/components" }
  ]
}
