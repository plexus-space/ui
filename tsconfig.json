{
  "compilerOptions": {
    // Base target for all packages
    "target": "ES2020",
    "lib": ["ES2020"],

    // Module system
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Interop and modules
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Monorepo support
    "composite": true,
    "incremental": true
  },
  "files": [],
  "references": [
    { "path": "./packages/cli" },
    { "path": "./packages/components" },
    { "path": "./playground" }
  ]
}
