{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["node"],
    "noEmit": false,
    "emitDeclarationOnly": false,
    // CLI is executable, doesn't need DOM
    "jsx": "react"
  },
  "include": ["src/**/*", "src/registry/registry.json"],
  "exclude": ["node_modules", "dist"]
}
